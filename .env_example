# Five Principles Prompt Engineering App - Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================
# OpenAI Configuration
# ===========================

# Your OpenAI API key (required for live AI generation)
# Get one at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI model to use (default: gpt-3.5-turbo)
OPENAI_MODEL=gpt-3.5-turbo

# Temperature for AI responses (0.0 = deterministic, 1.0 = creative)
OPENAI_TEMPERATURE=0.3

# Maximum tokens for AI responses
OPENAI_MAX_TOKENS=2000

# Organization ID (optional)
OPENAI_ORG_ID=your-org-id-here

# ===========================
# Streamlit Configuration
# ===========================

# Streamlit theme settings
STREAMLIT_THEME_BASE=light
STREAMLIT_THEME_PRIMARY_COLOR=#1f77b4
STREAMLIT_THEME_BACKGROUND_COLOR=#ffffff
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#f0f2f6
STREAMLIT_THEME_TEXT_COLOR=#262730

# Server configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_SERVER_HEADLESS=false

# File upload settings
STREAMLIT_MAX_UPLOAD_SIZE=200

# Browser settings
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# ===========================
# Application Settings
# ===========================

# Default values for the application
DEFAULT_COMPLEXITY=moderate
DEFAULT_FORMAT=text
DEFAULT_TONE=professional and helpful
DEFAULT_AUDIENCE=general audience

# Feature flags
ENABLE_ANALYTICS=true
ENABLE_DEMO_MODE=true
ENABLE_FILE_EXPORT=true
ENABLE_API_LOGGING=true

# Cache settings
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=100

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ===========================
# Development Settings
# ===========================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file location
LOG_FILE=logs/app.log

# Enable verbose logging
VERBOSE_LOGGING=false

# ===========================
# Database Configuration (Future)
# ===========================

# Database URL (for future features)
# DATABASE_URL=sqlite:///prompts.db

# Redis URL (for caching)
# REDIS_URL=redis://localhost:6379/0

# ===========================
# External Services (Future)
# ===========================

# Other AI providers (for future integration)
# ANTHROPIC_API_KEY=your-anthropic-key-here
# GOOGLE_AI_API_KEY=your-google-ai-key-here
# COHERE_API_KEY=your-cohere-key-here

# Email service (for notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ===========================
# Security Settings
# ===========================

# Secret key for session management
SECRET_KEY=your-secret-key-here-change-in-production

# CORS settings
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE
CORS_ALLOW_HEADERS=*

# API key encryption (for storing user keys)
ENCRYPTION_KEY=your-encryption-key-here

# ===========================
# Monitoring and Analytics
# ===========================

# Application monitoring
# SENTRY_DSN=your-sentry-dsn-here

# Google Analytics
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Application insights
# APPLICATIONINSIGHTS_CONNECTION_STRING=your-connection-string

# Prometheus metrics
ENABLE_METRICS=false
METRICS_PORT=9090

# Health check endpoint
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health

# ===========================
# Backup and Storage
# ===========================

# File storage location
STORAGE_PATH=./storage

# Backup settings
ENABLE_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Cloud storage (for file uploads)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_BUCKET_NAME=your-s3-bucket

# ===========================
# Performance Settings
# ===========================

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Connection pool settings
CONNECTION_POOL_SIZE=10
CONNECTION_POOL_MAX_OVERFLOW=20

# Memory limits
MAX_MEMORY_MB=512

# Worker processes (for production deployment)
WORKER_PROCESSES=1

# ===========================
# Experimental Features
# ===========================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Beta features
ENABLE_MULTIMODAL=false
ENABLE_VOICE_INPUT=false
ENABLE_COLLABORATIVE_EDITING=false

# A/B testing
ENABLE_AB_TESTING=false
AB_TEST_VARIANT=control

# ===========================
# Deployment Configuration
# ===========================

# Deployment platform (local, heroku, aws, gcp, azure)
DEPLOYMENT_PLATFORM=local

# Application URL (for webhooks and redirects)
APP_URL=http://localhost:8501

# SSL settings
FORCE_HTTPS=false
SSL_REDIRECT=false

# Static file serving
SERVE_STATIC_FILES=true
STATIC_FILES_PATH=./static

# ===========================
# Maintenance Mode
# ===========================

# Enable maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're performing scheduled maintenance. Please try again later.

# Allowed IPs during maintenance (comma-separated)
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# ===========================
# Localization
# ===========================

# Default language
DEFAULT_LANGUAGE=en

# Available languages (comma-separated)
AVAILABLE_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh

# Timezone
DEFAULT_TIMEZONE=UTC

